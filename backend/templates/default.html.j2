<!doctype html>
<html lang="ja">
<head>
  <meta charset="utf-8">
  <style>
    body { font-family: "Noto Sans CJK JP", "Noto Sans JP", sans-serif; font-size: 12pt; }
    h1 { font-size: 18pt; margin-bottom: 8mm; }
    pre { white-space: pre-wrap; }
  </style>
</head>
<body>
  <h2>{{ subname }}</h2>
  <h1>{{ name }}</h1>
  <pre>{{ name }}</pre>

  {% if bullets and bullets|length > 0 %}
    <h2>要点</h2>
    <ul>
      {% for b in bullets %}
        <li>{{ b }}</li>
      {% endfor %}
    </ul>
  {% endif %}
</body>
</html>
